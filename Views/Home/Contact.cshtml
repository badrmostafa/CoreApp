@model ContactUs
    <div class="container">

        <div class="section-title">
            <h2>Contact</h2>
        </div>

    </div>
      <div class="container">

        <div class="row mt-5">
            <div class="col-lg-6">
                <form asp-action="SaveContact">
                    <div class="row">
                        <div class="col form-group mt-3">
                            <input type="text"  class="form-control" required asp-for="Name" placeholder="Your Name" />
                            <div></div>
                        </div>
                        <div class="col form-group mt-3">
                            <input type="email" class="form-control" required asp-for="Email"  placeholder="Your Email" />
                            <div></div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="text" class="form-control" required asp-for="Subject" placeholder="Subject"  />
                        <div class="validate"></div>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" required asp-for="Message" rows="5"  placeholder="Message"></textarea>
                        <div></div>
                    </div>
                    <div class="mt-1"><input type="submit" class="btn btn-warning" value="Send Message"/></div>
                </form>
            </div>

        </div>

    </div>
